generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model chapters {
  id                               Int      @id @default(autoincrement())
  name                             String   @db.VarChar(255)
  chapter_type                     String   @db.VarChar(100)
  thumbnail                        String   @db.VarChar(500)
  title                            String   @db.VarChar(500)
  novel_id                         String   @db.Uuid
  content                          String
  created_at                       DateTime @default(now()) @db.Timestamp(6)
  updated_at                       DateTime @updatedAt @db.Timestamp(6)
  created_by                       Int
  updated_by                       Int?
  novels                           novels   @relation(fields: [novel_id], references: [public_id], onDelete: Cascade)
  users_chapters_created_byTousers users    @relation("chapters_created_byTousers", fields: [created_by], references: [id])
  users_chapters_updated_byTousers users?   @relation("chapters_updated_byTousers", fields: [updated_by], references: [id], onDelete: Restrict)

  @@index([novel_id], map: "idx_chapters_novel_id")
  @@index([title], map: "idx_chapters_title")
  @@index([created_by], map: "idx_chapters_created_by")
}

model novels {
  public_id                      String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  chapters                       Int        @default(0)
  views                          Int        @default(0)
  author_name                    String     @db.VarChar(255)
  title                          String     @db.VarChar(500)
  categories                     Json
  novel_summary                  String
  created_at                     DateTime   @default(now()) @db.Timestamp(6)
  updated_at                     DateTime   @updatedAt @db.Timestamp(6)
  created_by                     Int
  updated_by                     Int?
  chapter_list                   chapters[]
  users_novels_created_byTousers users      @relation("novels_created_byTousers", fields: [created_by], references: [id])
  users_novels_updated_byTousers users?     @relation("novels_updated_byTousers", fields: [updated_by], references: [id], onDelete: Restrict)

  @@index([author_name], map: "idx_novels_author_name")
  @@index([created_at], map: "idx_novels_created_at")
  @@index([created_by], map: "idx_novels_created_by")
  @@index([title], map: "idx_novels_title")
  @@index([views], map: "idx_novels_views")
}

model users {
  id                                Int        @id @default(autoincrement())
  full_name                         String     @db.VarChar(100)
  email                             String     @unique @db.VarChar(100)
  password                          String     @db.VarChar(255)
  created_at                        DateTime   @default(now()) @db.Timestamp(6)
  novels_novels_created_byTousers   novels[]   @relation("novels_created_byTousers")
  novels_novels_updated_byTousers   novels[]   @relation("novels_updated_byTousers")
  chapters_chapters_created_byTousers chapters[] @relation("chapters_created_byTousers")
  chapters_chapters_updated_byTousers chapters[] @relation("chapters_updated_byTousers")
}
